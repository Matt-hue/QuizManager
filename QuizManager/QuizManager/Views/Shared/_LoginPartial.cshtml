@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
    <li class="nav-item mr-5">
        <form class="form-inline" asp-controller="@nameof(Account)" asp-action="@nameof(Account.Logout)">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>

    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="@nameof(Quiz)" asp-action="@nameof(Quiz.List)">Quiz List</a>
    </li>

    @if (User.IsInRole(RoleNames.EDIT))
        {
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="@nameof(Quiz)" asp-action="@nameof(Quiz.CreateQuiz)">Create Quiz</a>
    </li>
        }
    }

</ul>
